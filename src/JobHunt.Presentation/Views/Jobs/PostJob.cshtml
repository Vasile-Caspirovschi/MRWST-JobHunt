@using JobHunt.Application.Jobs
@using JobHunt.Domain.Enums
@model JobPostDto

@{
    ViewData["Title"] = "Post a job";
}
<section>
    <div class="container pt-2">
        <div class="row">
            <div class="col-lg-2">
                <partial name="SideMenu"/>
            </div>
            <div class="col-lg-10">
                <form action="@Url.Action("PostJob", "Jobs")" method="post">
                    <h3 class="mb-3">Post a job</h3>
                    <div class="mb-3 small-section-tittle2">
                        <h4>Job title</h4>
                        <div class="col-12">
                            <input asp-for="Title" type="text" class="form-control" placeholder="Enter job title">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 small-section-tittle2">
                        <div class="row">
                            <div class="col-sm">
                                <h4>Job salary</h4>
                                <div class="input-group mb-3">
                                    <span class="input-group-text">
                                        <i class="fa fa-money custom-primary-color"></i>
                                    </span>
                                    <input asp-for="JobSalary" type="number" class="form-control" placeholder="Salary" aria-label="Salary" aria-describedby="basic-addon2">
                                    <span class="input-group-text">.00</span>
                                    <span asp-validation-for="JobSalary" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm">
                                <h4>Job location</h4>
                                <div class="input-group mb-3">
                                    <span class="input-group-text">
                                        <i class="fa fa-map-marker custom-primary-color"></i>
                                    </span>
                                    <input asp-for="Location" type="text" class="form-control" placeholder="Job Location" aria-label="Job Location" aria-describedby="basic-addon1">
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm">
                            <div class="mb-3 small-section-tittle2">
                                <h4>Job category</h4>
                                <div class="input-group mb-3">
                                    <span class="input-group-text">
                                        <i class="fa fa-university custom-primary-color"></i>
                                    </span>
                                    <select asp-for="JobCategoryName" class="form-select" name="select">
                                        <option value="">All Category</option>
                                        <option value="">Category 1</option>
                                        <option value="">Category 2</option>
                                        <option value="">Category 3</option>
                                        <option value="">Category 4</option>
                                    </select>
                                    @* <span asp-validation-for="JobCategoryName" class="text-danger"></span> *@
                                </div>
                            </div>
                        </div>
                        <div class="col-sm">
                            <div class="mb-3 small-section-tittle2">
                                <h4>Job type</h4>
                                <div class="input-group mb-3">
                                    <span class="input-group-text">
                                        <i class="fa fa-clock-o custom-primary-color"></i>
                                    </span>
                                    <select asp-for="JobType" class="form-select" name="select" asp-items="Html.GetEnumSelectList<JobTypeType>()">
                                        Select work schedule
                                    </select>
                                    <span asp-validation-for="JobType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm">
                            <div class="mb-3 small-section-tittle2">
                                <h4>Experience</h4>
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1">
                                        <i class="fa fa-briefcase custom-primary-color"></i>
                                    </span>
                                    <select asp-for="Experience" class="form-select" name="select" asp-items="Html.GetEnumSelectList<ExperienceRangeType>()">
                                        Select experience
                                    </select>
                                    <span asp-validation-for="Experience" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3 small-section-tittle2">
                        <h4>Job description</h4>
                        <textarea id="job-description">

                            @{
                                //if (!string.IsNullOrEmpty(Model.JobDescription))
                                  //  @Html.Raw(Model.JobDescription)
                               // ;
                            }    
                        </textarea>
                        <input asp-for="JobDescription" type="hidden" id="job-description-raw-html"/>
                        <span asp-validation-for="JobDescription" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary w-100" type="submit">Post the job</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>