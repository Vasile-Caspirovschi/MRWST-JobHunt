<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Job Hunt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/font-awesome.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/JobHunt.Presentation.styles.css" asp-append-version="true" /> *@
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap" rel="stylesheet">
</head>
<body>
    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <header class="header-area header-sticky background-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav header-text">
                        <a href="@Url.Action("Index", "Home")" class="logo">Job<em> Hunt</em></a>
                        <ul class="nav">
                            <li>
                                <a href="@Url.Action("Index", "Home")" class="active">Home</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Jobs", "Jobs")">Jobs</a>
                            </li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">For companies</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="#">Candidates</a>
                                    <a class="dropdown-item" href="@Url.Action("PostJob", "Jobs")">Post a job</a>
                                </div>
                            </li>
                            <li>
                                <a href="@Url.Action("Login", "Auth")">Log in</a>
                            </li>
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p>
                        Copyright© 2024 TI-225 | Vasile, Marius, Vladlena
                    </p>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <p>
                            Copyright© 2024 TI-225 | Vasile, Marius, Vladlena
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/imgfix.min.js"></script>
    <script src="~/js/mixitup.js"></script>
    <script src="~/js/custom.js" asp-append-version="true"></script>
    <script src="~/lib/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script> *@
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@
    @* <script src="~/js/scrollreveal.min.js"></script> *@
    @* <script src="~/js/waypoints.min.js"></script> *@
    @* <script src="~/js/jquery.counterup.min.js"></script> *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>